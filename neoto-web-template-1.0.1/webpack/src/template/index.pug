extends partials/layout-alt-footer.pug
block content
    .glide.slider
        .glide__track(data-glide-el='track')
            ul.glide__slides
                li.glide__slide.invert
                    .jumbotron.jumbotron-fluid.vh-100.d-flex.align-items-center
                        .bg.o-8(style='background-image:url('+require("./images/preview/slide2.png?preset=blur")+')')
                        .container-fluid.py-6
                            a.tilt.no-link.mx-auto(href = 'project-single-hero.html')
                                h6 Digital Strategy
                                h1.massive.pt-2
                                    span.d-block Forever
                                    span.d-block Rays
                li.glide__slide.invert
                    .jumbotron.jumbotron-fluid.vh-100.d-flex.align-items-center
                        .bg.o-8(style='background-image:url('+require("./images/preview/slide4.png?preset=blur")+')')
                        .container-fluid.py-6
                            a.tilt.no-link.mx-auto(href = 'project-single-alt.html')
                                h6 Art direction
                                h1.massive 
                                    span.d-block Hyper
                                    span.d-block Radiant
                                p.w-50 We've directed the most influencial brand of this era to ensure it will stay top notch. 
                li.glide__slide
                    .jumbotron.jumbotron-fluid.vh-100.d-flex.align-items-end
                        .bg.o-4(style='background-image:url('+require("./images/preview/slide3.png?preset=blur")+')')
                        .container-fluid.py-6
                            a.tilt.no-link(href = 'project-single.html')
                                h6 Branding
                                h1.massive
                                    span.d-block Diamond
                                    span.d-block Serenity
                li.glide__slide
                    .jumbotron.jumbotron-fluid.vh-100.d-flex.align-items-end
                        .bg.o-2(style='background-image:url('+require("./images/preview/slide1.png?preset=blur")+')')
                        .container-fluid.py-6
                            a.tilt.no-link(href = 'project-single.html')
                                h6 Product Design
                                h1.massive 
                                    span.d-block Skulls
                                    span.d-block Are 
                                    span.d-block Flexible
        .glide__bullets(data-glide-el='controls[nav]')
            .glide__bullet(data-glide-dir='=0') 1
            .glide__bullet(data-glide-dir='=1') 2
            .glide__bullet(data-glide-dir='=2') 3
            .glide__bullet(data-glide-dir='=3') 4
            .glide__bullet.total 4